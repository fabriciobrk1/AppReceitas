<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:padding="16dp">

    <!-- Nome da Receita -->
    <TextView
        android:id="@+id/tvNome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome da Receita"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#FBFBFB"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Título Ingredientes -->
    <TextView
        android:id="@+id/tvTituloIngredientes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ingredientes:"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#F8F7F7"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/tvNome"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Lista de Ingredientes -->
    <TextView
        android:id="@+id/tvIngredientes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lista de ingredientes..."
        android:textSize="16sp"
        android:textColor="#F8F7F7"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/tvTituloIngredientes"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Título Modo de Preparo -->
    <TextView
        android:id="@+id/tvTituloModoPreparo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modo de Preparo:"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#F8F7F7"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvIngredientes"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Texto do Modo de Preparo -->
    <TextView
        android:id="@+id/tvModoPreparo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Etapas do preparo..."
        android:textSize="16sp"
        android:textColor="#F8F7F7"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/tvTituloModoPreparo"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Botão Voltar -->
    <Button
        android:id="@+id/btnVoltar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Voltar"
        android:background="@drawable/button_arredondado"
        android:padding="12dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvModoPreparo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
